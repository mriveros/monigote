<td colspan="12" style="background: #e6e6e6; ">

  <div style="background: #e6e6e6; margin:15px;padding:15px;border-radius:10px;">

    <div>

      <div class="col-sm-12" style="border-bottom: 2px dashed #b6b6b6;margin-bottom:5px;padding:0px;">
        <h3 style="float:left;margin-top:5px;">Cuotas Detalles</h3>
       
      </div>

    </div> 

    <div style="clear:both;"></div>
   
    <div class="panel-body">
      
      <div class="table-responsive" id="table-produccion-detalle">
          
        <table class="table table-bordered table-hover table-striped display dataTable" aria-describedby="example_info">
            
          <thead>
              
            <tr role="row">
              
              <th>ID</th>
              <th>Alumno</th>
              <th>Cuota</th>
              <th>Monto Cuota</th>
              <th>Pago Cuota</th>
              <th>Número Comprobante</th>
              <th>Fecha Pago</th>
              <th>Estado</th>
              <th>Acción</th>
              
            </tr>
            
          </thead>
       
          <tbody id="derivado-lacteo-detalle">

            <% if @cuota_detalle.present? %>
            
              <% @cuota_detalle.each do |cd|%>

                <tr>
                  <td><%=cd.cuota_detalle_id %></td>
                  <td><%=cd.nombre_alumno%></td>
                  <td><%=cd.cuota %></td>
                  <td><%=cd.monto_cuota.to_s.reverse.gsub(/...(?=.)/,'\&.').reverse%></td>
                  <td><%=cd.pago_cuota.to_s.reverse.gsub(/...(?=.)/,'\&.').reverse   %></td>
                  <td><%=cd.numero_comprobante %></td>
                  <td><%= cd.fecha_pago.strftime('%d/%m/%Y') if cd.fecha_pago.present?%></td>
                  <td><%=cd.estado_pago_cuota_detalle%></td>

               

                  <td style="width: 50px;text-align:right;">
                    
                    <%if cd.estado_pago_cuota_detalle_id == PARAMETRO[:estado_pago_cuota_detalle_pendiente]%>
                     
                      <%= link_to_pago_cuota_detalle(cd.cuota_detalle_id) %>

                    <%end%>

                  </td> 

                </tr>

              <% end %>

              <tr id="tab-paginacion">

                  <td colspan="12" style="text-align:center;"><div class="flickr_pagination"><%= ajax_will_paginate @cuota_detalle, :params => params %></div></td>
              </tr>

            <% else %>

              <tr><td colspan=3>No se han encontrado datos.</td></tr>

            <% end %>
                
          </tbody>
              
        </table>
        
      </div>
      
    </div>
    
  </div>

  

</td>