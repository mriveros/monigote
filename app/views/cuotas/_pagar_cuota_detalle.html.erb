<div class="modal-dialog">
      
  <div class="modal-content">
        
     <div class="modal-header" style="background:#e6e6e6;">
          
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h4 class="modal-title" id="myModalLabel">Pagar Cuota</h4>
      
    </div>

    <%= form_for @cuota_detalle, remote: true, url: cuotas_guardar_pago_cuota_detalle_url, html: { id: "#form-pagar-cuota-detalle" }, method: 'POST' do |f| %>

      <%= hidden_field_tag :window_id, params[:window_id]%>
      <%= hidden_field_tag :cuota_detalle_id, @cuota_detalle.id%>

      <div class="modal-body">

        <div class="panel-body">

          <div class="col-sm-4"><%= f.label nil, "Fecha Pago #{attr_requerido}".html_safe %></div>
          <div class="col-sm-7"> 
            <div class='input-group' style="width:150px;float:left;margin-top:5px;">
              <%= text_field_tag :fecha_pago,nil , class: 'form-control input-sm',value:"#{Date.today.strftime("%d/%m/%Y")}", style: "margin-top:0px;" %>
              <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
            </div>
          </div>
          <div class="col-sm-1"></div><br/><br/>

          <div class="col-sm-4"><%= f.label nil, "Monto Pago #{attr_requerido}".html_safe, id: "lbl-numero" %></div>
          <div class="col-sm-7"><%= text_field_tag :monto_pago, @cuota_detalle.monto_cuota ,:onkeypress=> "return isNumberKey(event)", :onkeyup=>' formatear_numero(this)', class: 'form-control input-sm'%></div>
          <div class="col-sm-1"></div><br/><br/>

           
          <div class="col-sm-4"><%= f.label nil, "Comprobante #{attr_requerido}".html_safe, id: "lbl-numero" %></div>
          <div class="col-sm-7"><%= text_field_tag  :numero_comprobante ,nil,  class: 'form-control input-sm', style:"text-transform:uppercase;", maxlength: "6"  %></div>
          <div class="col-sm-1"></div><br/><br/>

          <div class="col-sm-4"><%= label_tag :nil, "Observación".html_safe %></div>
          <div class="col-sm-7"><%= text_area_tag :observacion ,nil,class: 'form-control input-sm' %></div>
          <div class="col-sm-1"></div><br />
       
      </div>

      <div class="modal-footer" style="background:#e6e6e6;">

        <%= link_to "Cerrar", "#", class: "btn btn-default", onclick: "$('##{params[:window_id]}').modal('hide');" %> 
        <%= link_to "Guardar","#", class: "btn btn-primary", id: "btn-guardar-pago" %>
          
      </div>
    
    <% end %>

  </div>

</div>

<style type="text/css">

  #form-pagar-cuota-detalle label, #form-pagar-cuota-detalle input[type='text'] { float:left; margin-top:5px;}
  #form-pagar-cuota-detalle br {clear:both; }
  #form-pagar-cuota-detalle label { width:200px; font-size:12px;}

</style>

<script type="text/javascript">

  aplicar_datepicker2();

  setTimeout(function(){ 

    $("#descripcion").focus();
   
  }, 500);


   $("textarea").keydown(function(e){
    // Enter was pressed without shift key
    if (e.keyCode == 13 && !e.shiftKey)
    {
        // prevent default behavior
        e.preventDefault();
    }
    });

   function isNumberKey(evt)
  {
     var charCode = (evt.which) ? evt.which : event.keyCode
     if (charCode > 31 && (charCode < 48 || charCode > 57) && charCode != 46) {
         
         return false;
     }

     return true;
  }

  $("#btn-guardar-pago").bind('click', function () {

      valido = true
      msg = ""

     if($("#fecha_pago").val().length == 0){

        msg +="Debe agregar una fecha.\n"
        valido = false
          
      }


      if($("#monto_pago").val().length == 0){

        msg +="Debe agregar un monto.\n"
        valido = false
          
      }

       if($("#numero_comprobante").val().length == 0){

        msg +="Debe ingresar el número de comprobante de pago.\n"
        valido = false
          
      }

      if (valido){

        swal({
          title: "Pagar Cuota",
          text: "Al guardar el pago se realizará y quedara registrado en el sistema",
          type: "warning",
          showCancelButton: true,
          confirmButtonClass: "btn-confirm",
          confirmButtonText: "Confirmar",
          cancelButtonText: "Cancelar",
          closeOnConfirm: true,
          closeOnCancel: true
        },
        function(isConfirm) {
          if (isConfirm) {

            $("#form-pagar-cuota-detalle").submit();
            
          } 

        });

      }else{

        swal(msg);
      
      }

      return false;
    
    })


</script>