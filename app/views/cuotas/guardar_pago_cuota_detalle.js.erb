<% if @guardado_ok %>
  
  
  $("#<%= params[:window_id]%>").modal('hide');

  setTimeout(function(){ 
    
    $("#form_buscar_cuotas_id").val('<%=@cuota.id%>');
    $("#form-buscar-pagos-cuotas").submit();
    swal("Cuota pagada exitosamente!");

  }, 1000);

  setTimeout(function(){ 
    
    $("#link-to-cuota-detalle-<%=params[:cuota_id]%>").trigger('click');
    $("#link-to-cuota-detalle-<%=params[:cuota_id]%>").trigger('click');
    swal("Cuota pagada exitosamente!");

  }, 2000);

    

<% else %>

  swal('Error al guardar el pago de la cuota. <%=@msg%>');

<% end %>