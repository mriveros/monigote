
<div class="modal-dialog">
      
  <div class="modal-content">
        
    <div class="modal-header" style="background:#e6e6e6;">
          
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h4 class="modal-title" id="myModalLabel">Agregar Cuota</h4>
      
    </div>

    <%= form_for @cuota, remote: true, url: cuotas_guardar_url, html: { id: "form-agregar-cuota" , autocomplete: 'off'}, method: 'POST' do |f| %>

      <%= hidden_field_tag :window_id, params[:window_id]%>

      <div class="modal-body">

        <div class="panel-body">

          <div class="col-sm-4"><%= label_tag :nil, "Fecha #{attr_requerido}".html_safe %></div>
          <div class="col-sm-7"><%= date_field_tag :fecha, Date.today, class: 'form-control input-sm' %>
          </div>    
          <div class="col-sm-1"></div><br />

          <div class="col-sm-4"><%= label_tag nil, "Mes Periodo #{attr_requerido}".html_safe, id: "lbl-parentezco" %></div>
          <div class="col-sm-7"><%= collection_select :mes_periodo,:id, Mes.orden_mes, :id, :descripcion, { include_blank: true}, {class: 'form-control input-sm'} %></div>
          <div class="col-sm-1"></div><br />

          <div class="col-sm-4"><%= label_tag :nil, "Año Periodo #{attr_requerido}".html_safe %></div>
          <div class="col-sm-7"><%= text_field_tag :anho_periodo, Date.today.year, class: 'form-control input-sm',style:"text-transform:uppercase;", :maxlength=> 4, :readonly=> true %></div>
          <div class="col-sm-1"></div><br />

          <div class="col-sm-4"><%= f.label :nivel_id, "Nivel#{attr_requerido}".html_safe %></div>
          <div class="col-sm-7"><%= f.collection_select :nivel_id, Nivel.orden_descripcion, :id, :descripcion, { include_blank: true}, {class: 'form-control input-sm', style: "width:220px;"} %></div>
          <div class="col-sm-1"></div><br />

          <div class="col-sm-4"><%= f.label :sala_id, "Sala#{attr_requerido}".html_safe %></div>
          <div class="col-sm-7"><%= f.collection_select :sala_id, Sala.orden_descripcion, :id, :descripcion, { include_blank: true}, {class: 'form-control input-sm', style: "width:220px;"} %></div>
          <div class="col-sm-1"></div><br />
              
      </div>

      <div class="modal-footer" style="background:#e6e6e6;">
        
         <%= link_to "Cerrar", "#", class: "btn btn-default", onclick: "$('##{params[:window_id]}').modal('hide');" %> 
        <%= link_to "Guardar","#", class: "btn btn-primary", id: "btn-guardar-cuota" %> 

      </div>

    <% end %>

  </div>
  
</div>

<style type="text/css">

  #form-agregar-cuota label, #form-agregar-cuota input[type='text'], #form-agregar-cuota select { float:left; margin-top:5px;}
  #form-agregar-cuota br {clear:both; }
  #form-agregar-cuota label { width:200px;font-size:12px;margin-top:10px;}
  
  

</style>

<script type="text/javascript">
 
 aplicar_datepicker2();

 $("#btn-guardar-cuota").bind('click', function () {

      valido = true
      msg = ""

      if($("#mes_periodo_id").val().length == 0){

        msg +="Debe seleccionar un mes.\n"
        valido = false
      
      }


      if($("#cuota_nivel_id").val().length == 0){

        msg +="Debe seleccionar un nivel.\n"
        valido = false
      
      }

      if($("#cuota_sala_id").val().length == 0){

        msg +="Debe seleccionar una sala.\n"
        valido = false
      
      }

      if (valido){

        swal({
          title: "Confirmar",
          text: "Al confirmar se registrará la cuota y se generarán los detalles.",
          type: "warning",
          showCancelButton: true,
          confirmButtonClass: "btn-confirm",
          confirmButtonText: "Confirmar",
          cancelButtonText: "Cancelar",
          closeOnConfirm: true,
          closeOnCancel: true
        },
        function(isConfirm) {
          if (isConfirm) {

            $("#form-agregar-cuota").submit();
            
          } 

        });

      }else{

        swal(msg);
      
      }

      return false;
    
    })

</script>