<%= link_to icon_detalles, "#", id: "link-to-cuota-detalle-#{cuota_id}", class: 'btn btn-success btn-xs', title: 'Haga click para ver los detalles de la ProducciÃ³n' %>

<script type="text/javascript">

  $("#link-to-cuota-detalle-<%= cuota_id %>").bind('click', function(){

    var contenido = $.trim($("#cuota-detalle-<%= cuota_id %>").html());

    $(".cuota-detalle").html('');

    if(contenido.length == 0){

    $(this).parent().parent().after("<tr id='cuota-detalle-<%= cuota_id %>' class='cuota-detalle'><td colspan='12' style='text-align:center;'><i class='fa fa-refresh fa-spin'></i> Cargando...</td></tr>")

      $.ajax({

        type: 'GET',
        url: '<%= url_for(cuotas_cuota_detalle_path) %>',  
        data: { cuota_id: <%= cuota_id %>},
        dataType: 'script'
        
      })

    }
    
    return false;
  })

</script>