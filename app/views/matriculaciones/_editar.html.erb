
<div class="modal-dialog" style="text-align:left;">
      
  <div class="modal-content">
        
    <div class="modal-header" style="background:#e6e6e6;">
          
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h4 class="modal-title" id="myModalLabel">Editar Matriculación</h4>
      
    </div>

    <%= form_for @matriculacion, remote: true, url: matriculaciones_actualizar_url, html: { id: "form-editar-matriculacion" , autocomplete: 'off'}, method: 'POST' do |f| %>

      <%= f.hidden_field :id %>
      <%= hidden_field_tag :window_id, params[:window_id]%>

      <div class="modal-body">

        <div class="panel-body">

          <div class="col-sm-4"><%= f.label :tipo_consulta, "Periodo Escolar#{attr_requerido}".html_safe %></div>
          <div class="col-sm-7"><%= f.collection_select :periodo_id, PeriodoEscolar.orden_periodo, :id, :descripcion, { include_blank: true}, {class: 'form-control input-sm', style: "width:220px;"} %></div>
          <div class="col-sm-1"></div><br />

          <div class="col-sm-4"><%= f.label :nivel_id, "Nivel#{attr_requerido}".html_safe %></div>
          <div class="col-sm-7"><%= f.collection_select :nivel_id, Nivel.orden_descripcion, :id, :descripcion, { include_blank: true}, {class: 'form-control input-sm', style: "width:220px;"} %></div>
          <div class="col-sm-1"></div><br />

          <div class="col-sm-4"><%= f.label :nivel_id, "Sala#{attr_requerido}".html_safe %></div>
          <div class="col-sm-7"><%= f.collection_select :sala_id, Sala.orden_descripcion, :id, :descripcion, { include_blank: true}, {class: 'form-control input-sm', style: "width:220px;"} %></div>
          <div class="col-sm-1"></div><br />

          <div class="col-sm-4"><%= f.label :nivel_id, "Estado Matriculación#{attr_requerido}".html_safe %></div>
          <div class="col-sm-7"><%= f.collection_select :estado_matriculacion_id, EstadoMatriculacion.orden_descripcion, :id, :descripcion, { include_blank: false}, {class: 'form-control input-sm', style: "width:220px;"} %></div>
          <div class="col-sm-1"></div><br />
       
      </div>

      <div class="modal-footer" style="background:#e6e6e6;">
        <%= link_to "<span class='glyphicon glyphicon-remove'></span> Cerrar".html_safe, "#", class: "btn btn-default", onclick: "$('##{params[:window_id]}').modal('hide');" %> 
        <%= f.submit "Guardar".html_safe, class: "btn btn-primary", id: "btn-guardar-matriculacion" %>          
      </div>

    <% end %>

  </div>
</div>

<style type="text/css">

  #form-editar-matriculacion label, #form-editar-matriculacion input[type='text'], #form-editar-matriculacion select { float:left; margin-top:5px;}
  #form-editar-matriculacion br {clear:both; }
  #form-editar-matriculacion label { width:200px;font-size:12px;margin-top:10px;}


</style>

<script type="text/javascript">
  aplicar_datepicker2();
</script>
