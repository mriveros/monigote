<%= link_to icon_detalles, "#", id: "link-to-matriculacion-detalle-#{matriculacion_id}", class: 'btn btn-success btn-xs', title: 'Haga click para ver los detalles de la MatriculaciÃ³n' %>

<script type="text/javascript">

  $("#link-to-matriculacion-detalle-<%= matriculacion_id %>").bind('click', function(){

    var contenido = $.trim($("#matriculacion-detalle-<%= matriculacion_id %>").html());

    $(".matriculacion-detalle").html('');

    if(contenido.length == 0){

    $(this).parent().parent().after("<tr id='matriculacion-detalle-<%= matriculacion_id %>' class='matriculacion-detalle'><td colspan='12' style='text-align:center;'><i class='fa fa-refresh fa-spin'></i> Cargando...</td></tr>")

      $.ajax({

        type: 'GET',
        url: '<%= url_for(matriculaciones_matriculacion_detalle_path) %>',  
        data: { matriculacion_id: <%= matriculacion_id %>},
        dataType: 'script'
        
      })

    }
    
    return false;
  })

</script>