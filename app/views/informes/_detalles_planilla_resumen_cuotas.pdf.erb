
<table align="center" class="cual" style="width: 80%; border: 1px solid #000 !important;">
 
  <tr>

   		<th>ID Detalle</th>
      <th>Mes/Periodo</th>
      <th>Nivel</th>
      <th>Fecha Generaci√≥n</th>
      <th>Fecha Pago</th>
      <th>Comprobante</th>
      <th>Alumno</th>
      <th>Monto Cuota</th>
      <th>Estado Cuota</th>

  </tr>

  <% @cuota_detalle.each do |cuota_detalle|%>
    

  
  	<tr>

 		 	<td><%= cuota_detalle.cuota_detalle_id%></td>
      <td><%= cuota_detalle.mes_periodo + "/" + cuota_detalle.anho_periodo%></td>
      <td><%= cuota_detalle.nivel%></td>
      <td><%= cuota_detalle.fecha_generacion.strftime('%d/%m/%Y') if cuota_detalle.fecha_generacion.present?%></td>
      <td><%= cuota_detalle.fecha_pago.strftime('%d/%m/%Y') if cuota_detalle.fecha_pago.present?%></td>
      <td><%= cuota_detalle.numero_comprobante%></td>
      <td><%= cuota_detalle.nombre_alumno%></td>
      <td><%= cuota_detalle.pago_cuota.to_s.reverse.gsub(/...(?=.)/,'\&.').reverse%></td>
      <td><%= cuota_detalle.estado_pago_cuota_detalle%></td>

		</tr>
  		
  	
<%end%>

