<% if @alumno_ok.present? %>
    
   $("<div class='col-sm-12' id='msg-editar-alumno' style='color:#000;padding-top:5px;font-size:10px;background:#d6ffd6;border-radius:5px;text-align:center;'>Actualizado Exitosamente.</div>").insertBefore("#form-editar-alumno");
   
  $("#form_buscar_alumnos_id").val('<%= @alumno.id %>');
  $("#form_buscar_alumnos_nombres").val('');
  $("#form_buscar_alumnos_apellidos").val('');
  $("#form_buscar_alumnos_direccion").val('');
  $("#form_buscar_alumnos_telefono").val('');
  
  $("#<%= params[:window_id]%>").modal('hide'); 
  setTimeout(function(){ 
  	swal("Alumno actualizado exitosamente.");	
  }, 1000);
  
  $("#form-buscar-alumnos").submit();

<% else %>

  $("<div class='col-sm-12' id='msg-editar-alumno' style='color:#000;padding-top:5px;font-size:10px;background: #f8dfdf;border-radius:5px;text-align:center;'><%= j(@msg) %></div>").insertBefore("#form-editar-alumno");

<% end %>
