<% if @guardado_ok %>

   $("<div class='col-sm-12' id='msg-agregar-piloto' style='color:#000;padding-top:5px;font-size:10px;background:#d6ffd6;border-radius:5px;text-align:center;'>Registrado Exitosamente.</div>").insertBefore("#form-agregar-piloto");
   
  $("#form_buscar_pilotos_id").val('<%= @piloto.id %>');
  $("#form_buscar_pilotos_nombres").val('');
  $("#form_buscar_pilotos_apellidos").val('');
  $("#form_buscar_pilotos_direccion").val('');
  $("#form_buscar_pilotos_telefono").val('');
  $("#form-buscar-pilotos").submit();

  
  setTimeout(function(){ 
    
    $("#<%= params[:window_id]%>").modal('hide');
    swal("Piloto agregado Exitosamente.");

    }, 2000);


<% else %>
	swal("Error al guardar:" + "<%=j(@msg)%>")
    $("<div class='col-sm-12' id='msg-agregar-pilotos' style='color:#000;padding-top:5px;font-size:10px;background: #f8dfdf;border-radius:5px;text-align:center;'><%= j(@msg) %></div>").insertBefore("#form-agregar-pilotos");

<% end %>
