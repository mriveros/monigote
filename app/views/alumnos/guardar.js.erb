<% if @guardado_ok %>

   $("<div class='col-sm-12' id='msg-agregar-alumno' style='color:#000;padding-top:5px;font-size:10px;background:#d6ffd6;border-radius:5px;text-align:center;'>Registrado Exitosamente.</div>").insertBefore("#form-agregar-alumno");
   
  $("#form_buscar_alumnos_id").val('<%= @alumno.id %>');
  $("#form_buscar_alumnos_nombres").val('');
  $("#form_buscar_alumnos_apellidos").val('');
  $("#form_buscar_alumnos_direccion").val('');
  $("#form_buscar_alumnos_telefono").val('');
  $("#form-buscar-alumnos").submit();

  
  setTimeout(function(){ 
    
    $("#<%= params[:window_id]%>").modal('hide');
    swal("Alumno agregado Exitosamente.");

    }, 2000);


<% else %>
	swal("Error al guardar:" + "<%=j(@msg)%>")
    $("<div class='col-sm-12' id='msg-agregar-alumnos' style='color:#000;padding-top:5px;font-size:10px;background: #f8dfdf;border-radius:5px;text-align:center;'><%= j(@msg) %></div>").insertBefore("#form-agregar-alumnos");

<% end %>
